{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "lib": ["es6", "dom"],
    "module": "ES2022",
    "target": "ES2022",
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
